<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iteso.pdm18_scrollabletabs.ActivitySplashScreen"
    android:background="#2C64AF"
    >
    
    <TextView
        android:id="@+id/activity_splash_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to My Products"
        android:textSize="30sp"
        android:padding="20dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/activity_splash_screen_title"/>

</RelativeLayout>
